{
  "name": "devtools",
  "version": "1.0.0",
  "description": "Debug Node.js, TypeScript, Jest with Google Chrome DevTools",
  "main": "index.js",
  "scripts": {
    "start": "node dist/server.js",
    "start:sucrase": "sucrase-node src/server.ts",
    "build": "rimraf dist && tsc -p tsconfig-build.json",
    "test": "jest --passWithNoTests --runInBand --no-cache",
    "test:clear": "jest --clearCache"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JonatanLima/node-devtools.git"
  },
  "keywords": [
    "nodejs",
    "typescript",
    "jest"
  ],
  "author": "JonatanLima <jotanlima@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/JonatanLima/node-devtools/issues"
  },
  "homepage": "https://github.com/JonatanLima/node-devtools#readme",
  "engines": {
    "node": "16.x"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.10.1",
    "fast-glob": "^3.2.7",
    "jest": "^27.2.2",
    "sucrase": "^3.20.1",
    "ts-jest": "^27.0.5",
    "typescript": "^4.4.3"
  },
  "dependencies": {
    "express": "^4.17.1"
  }
